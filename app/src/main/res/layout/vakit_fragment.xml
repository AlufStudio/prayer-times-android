<android.support.percent.PercentRelativeLayout
        android:background="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

    <TextView
            android:id="@+id/kerahat"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/kerahat"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/kerahat"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone"/>


    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:id="@+id/date"
            android:layout_alignParentTop="true"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:lines="1"
            android:textStyle="italic"/>


    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:id="@+id/city"
            android:layout_below="@id/date"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="10%"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:lines="1"/>


    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/city"
            android:id="@+id/hicri"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="7%"
            android:lines="1"
            app:layout_marginBottomPercent="4%"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textStyle="italic"/>


    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/hicri"
            android:id="@+id/imsak"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/imsak"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/hicri"
            android:id="@+id/imsaktime"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/imsak"
            android:id="@+id/gunes"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/gunes"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/imsak"
            android:id="@+id/gunestime"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/gunes"
            android:id="@+id/ogle"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/ogle"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/gunes"
            android:id="@+id/ogletime"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/ogle"
            android:id="@+id/ikindi"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/ikindi"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/ogle"
            android:id="@+id/ikinditime"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/ikindi"
            android:id="@+id/aksam"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/aksam"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:id="@+id/aksamtime"
            android:layout_below="@id/ikindi"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/aksam"
            android:id="@+id/yatsi"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/yatsi"/>

    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/aksam"
            android:id="@+id/yatsitime"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="8%"
            android:paddingRight="50dp"
            android:text="00:00"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-thin"/>


    <com.metinkale.prayerapp.custom.AutoResizeTextView
            android:layout_below="@id/yatsi"
            android:id="@+id/countdown"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="4%"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>


    <ImageView
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:id="@+id/source2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/kerahat"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/vakit"/>

    <ImageView
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:id="@+id/source1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/kerahat"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/vakit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"/>

</android.support.percent.PercentRelativeLayout>

