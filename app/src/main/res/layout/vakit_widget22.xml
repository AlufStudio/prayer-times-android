<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#00ff00"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#00ff00"/>


    <ImageView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/left"
        android:background="#00ff00"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#00ff00"/>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/right"
        android:layout_toRightOf="@+id/left"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom"
        android:layout_centerInParent="true"
        android:background="#ffffff">


        <TextView
            android:visibility="gone"
            android:id="@+id/hover0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imsak"
            android:layout_alignBottom="@+id/imsak"/>

        <TextView
            android:id="@+id/hover1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gunes"
            android:layout_alignBottom="@+id/gunes"/>


        <TextView
            android:id="@+id/hover2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ogle"
            android:visibility="gone"
            android:layout_alignBottom="@+id/ogle"/>


        <TextView
            android:id="@+id/hover3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imsak"
            android:layout_alignBottom="@+id/imsak"/>


        <TextView
            android:id="@+id/hover4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ikindi"
            android:layout_alignBottom="@+id/ikindi"/>


        <TextView
            android:id="@+id/hover5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignTop="@+id/aksam"
            android:layout_alignBottom="@+id/aksam"/>


        <TextView
            android:id="@+id/hover6"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/yatsi"
            android:layout_alignBottom="@+id/yatsi"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="city"/>

        <ImageView
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/imsak"
            android:layout_below="@id/city"
            android:fontFamily="sans-serif-light"
            android:text="@string/fajr"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/imsaktime"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/city"
            android:gravity="end"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/gunes"
            android:layout_below="@id/imsak"
            android:fontFamily="sans-serif-light"
            android:text="@string/sun"/>

        <TextView
            android:id="@+id/gunestime"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imsak"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/ogle"
            android:layout_below="@id/gunes"
            android:fontFamily="sans-serif-light"
            android:text="@string/zuhr"/>

        <TextView
            android:id="@+id/ogletime"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/gunes"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/ikindi"
            android:layout_below="@id/ogle"
            android:fontFamily="sans-serif-light"
            android:text="@string/asr"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/ikinditime"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ogle"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/aksam"
            android:layout_below="@id/ikindi"
            android:fontFamily="sans-serif-light"
            android:text="@string/maghrib"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/aksamtime"
            android:layout_alignParentEnd="true"


            android:layout_below="@id/ikindi"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_alignRight="@+id/center"
            android:layout_height="wrap_content"
            android:id="@+id/yatsi"
            android:layout_below="@id/aksam"
            android:fontFamily="sans-serif-light"
            android:text="@string/ishaa"/>

        <TextView
            android:id="@+id/yatsitime"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/center"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/aksam"
            android:fontFamily="sans-serif-thin"
            android:gravity="end"
            android:text="00:00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yatsi"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:id="@+id/countdown"/>

    </RelativeLayout>

</RelativeLayout>
